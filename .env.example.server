# Server environment variables for Cloudflare Worker

# Set as worker secrets (not in wrangler.toml):
# npx wrangler secret put TELNYX_API_KEY
# npx wrangler secret put DROPBOX_SIGN_API_KEY
# npx wrangler secret put SINCH_ACCESS_KEY
# npx wrangler secret put SINCH_SECRET_KEY
# npx wrangler secret put BASIC_AUTH_USER
# npx wrangler secret put BASIC_AUTH_PASS
TELNYX_API_KEY=KEY_YOUR_API_KEY_HERE
DROPBOX_SIGN_API_KEY=key_abcdefgh
SINCH_ACCESS_KEY=sinch-access
SINCH_SECRET_KEY=sinch-secret
BASIC_AUTH_USER=your-username
BASIC_AUTH_PASS=your-password

# Set in wrangler.toml [vars] section (or as secrets for additional security):
CONNECTION_ID=YOUR_FAX_APPLICATION_ID
FAX_FROM=+15551234567
# Optional: select fax provider (defaults to telnyx). Options: telnyx | dropbox-fax | sinch
FAX_PROVIDER=telnyx
# Dropbox Fax
DROPBOX_FAX_TEST_MODE=1
# Sinch
SINCH_PROJECT_ID=your-sinch-project-id
